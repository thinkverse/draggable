{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "lib": ["DOM"],
        "outDir": "build"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"],
    "watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents",
        "excludeDirectories": ["**/node_modules", "build"],
    }
}
